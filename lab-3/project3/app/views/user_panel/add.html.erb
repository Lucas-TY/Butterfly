<h2>Planner</h2>
<div>
<%= form_tag(planner_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search subjects" %>
  <%= submit_tag "Search" %>
<% end %>
</div>
<div>

<% if @search_result||@course%>
<table border="1">
  <tr>
    <td>Course ID </td>
    <td>Class Number</td>
    <td>Unit</td>
    <td>Days&Times</td>
    <td>Room</td>
    <td>Instructor</td>
    <td>Instruction Mode</td>
    <td>Enrld / Wait</td>
    <td>Status</td>
    <td>select</td>
  </tr>
    </div>
  <div>
<% @search_result.each do |subject|%>
<tr>

      <td>CSE-<%= subject.course_id %> </td>
      <td><%= subject.subject_id %></td>
      <td><%= subject.units_range %></td>
      <td><%= subject.days_times %></td>
      <td><%= subject.room %></td>
      <td><%= subject.instructor %></td>
      <td><%= subject.instruct_mode %></td>
      <td><%= subject.enrld_wait %></td>
      <td><%= subject.open_status %></td>
      <td><a href="<%= add_subject_path(subject) %>">add</a></td>
      
      
     
    </tr>
  <% end %>
  <% end %>



  <br></br>
<%if @change%>
<% @change.each do |subject|%>
<tr>

      <td>CSE-<%= subject.course_id %> </td>
      <td><%= subject.subject_id %></td>
      <td><%= subject.units_range %></td>
      <td><%= subject.days_times %></td>
      <td><%= subject.room %></td>
      <td><%= subject.instructor %></td>
      <td><%= subject.instruct_mode %></td>
      <td><%= subject.enrld_wait %></td>
      <td><%= subject.open_status %></td>
    </tr>
  <% end %>
  <% end %>

</div>

