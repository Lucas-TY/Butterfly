<div class="content">
<% if current_user.role == 'instructor' && current_user.isActive %>
  <h1>Edit evaluation for grader <%= @name %> in section <%=params[:subject]%></h1>
  <%= form_with model: @evaluation do |form| %>
    <%= form.label :graders, "Student: #{@name}" %>
    <br>
    <%= form.label :message, "Evaluation: "%>
    <%= form.text_area :message, size: "30x4"%>
    <br>
    <%= form.submit "Submit Evaluation"%>
  <%end%>
<% else %>
  <h1>Access Denied.</h1>
<% end %>
</div>