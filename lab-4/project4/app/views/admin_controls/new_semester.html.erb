<div class="content">
<% if current_user.role == 'admin' && current_user.isActive %>
  <h1>New Semester Setup</h1>

  <%= form_with model: @semester, local: true, url: "/semesters", method: :post do |form| %>
    <%= form.label :code %>
    <%= form.text_field :code %>

    <%= form.label :description %>
    <%= form.text_field :description %>

    <%= form.submit "Add Semester"%>
  <% end %>

<% else %>
  <h1>Access Denied.</h1>
<% end %>
</div>