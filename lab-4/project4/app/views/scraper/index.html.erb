
<div class="content">
  <% if current_user.role == 'admin' && current_user.isActive %>
    <h1>Scraper</h1>
    <br/>

    <%= render partial: "semesters/semester_select", 
      locals: {
        semester_list: @semester_list,
        submit_text: "Scrape",
        path: scraper_path,
        method: :post
      } %>

    <%= render partial: "semesters/semester_select", 
      locals: {
        semester_list: @semester_list,
        submit_text: "Load",
        path: scrape_load_path,
        method: :post
      } %>

  <% else %>
    <h1>Access Denied.</h1>
  <% end %>
</div>