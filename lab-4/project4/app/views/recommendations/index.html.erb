<p id="notice"><%= notice %></p>

<h1>Recommendations</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @show=@recommendations.find_by(:instructor=>current_user.instructor,:section=>params[:section])%>
    <%if @show%>
    <%@show.each do |recommendation| %>
      <tr>
        <td><%= link_to 'Show', recommendation(section: @section) %></td>
        <td><%= link_to 'Edit', edit_recommendation_path(id: recommendation,section: @section) %></td>
        <td><%= link_to 'Destroy', recommendation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Recommendation', new_recommendation_path(section: @section) %>
