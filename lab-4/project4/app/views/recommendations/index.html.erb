<p id="notice"><%= notice %></p>
<h1>Recommendations</h1>
<table class="table table-sm table-bordered">
  <thead class="thead-light">
     <tr>
        <th>Name</th>
        <th>ID</th>
        <th>Email</th>
        <th>Section</th>
      </tr>
    </thead>
 
  <tbody>
    <% @show=@recommendations.where(:instructor=>current_user.instructor,:section=>params[:operating])%>
    <%if @show%>
    <%@show.each do |recommendation| %>
      <tr>
      <%student=recommendation.student.user%>
        
          <td><%= student.name %></td>
          <td><%= student.id %></td>
          <td><%= student.email %></td>
          <td><%= recommendation.section %></td>
        <td><%= link_to 'Show', "recommendation/#{recommendation.id}" %></td>
        <td><%= link_to 'Edit', edit_recommendation_path(id: recommendation.id) %></td>
        <td><%= link_to 'Destroy', recommendation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Recommendation', new_recommendation_path(section: @section) %>
